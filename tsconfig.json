{
   "compilerOptions": {
      "strict": true,
      "lib": [
         "es5",
         "es2015",
         "es2016",
         "es2017",
         "es2018",
         "es2019",
         "es2020",
      ],

      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "Node",

      "outDir": "bin",
      "newLine": "lf",

      "allowJs": true,
      "checkJs": true
   },

   "include": [
      "src/*.ts"
   ]
}

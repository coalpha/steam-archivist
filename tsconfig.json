{
   "compilerOptions": {
      "strict": true,
      "lib": [
         "ES5",
         "ES2015",
         "ES2016",
         "ES2018",
         "ES2019",
         "ES2020",
      ],

      "target": "ES2019",
      "module": "CommonJS",
      "moduleResolution": "Node",

      "outDir": "bin",
      "newLine": "lf",

      "allowJs": true,
      "checkJs": true
   },

   "include": [
      "src/*.ts"
   ]
}
